<odoo>

    <record id="view_account_move_form" model="ir.ui.view" >
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <field name="journal_id" position="before">
                <field name="payment_journal_id" domain="[('type', 'in', ('bank', 'cash'))]"/>
            </field>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='tag_ids']" position="after">
                <field name="iugu_status"/>
                <field name="iugu_secure_payment_url" widget="url"/>
                <button name="open_wizard_change_date" string="Alterar Iugu" type="object" class="btn btn-success btn-sm" />
                <button name="action_verify_iugu_payment" string="Verificar Iugu" type="object" class="btn btn-success btn-sm" />
                <button name="action_cancel_iugu" string="Cancelar" type="object" class="btn btn-danger btn-sm" confirm="Confirma o cancelamento?" />
            </xpath>
        </field>
    </record> 

</odoo>
